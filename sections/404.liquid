

<!-- sections/404.liquid -->
<div class="text-center py-16">
  <h1 class="text-4xl font-bold mb-4">{{ section.settings.heading }}</h1>
  <p class="text-lg text-gray-600 mb-6">{{ section.settings.subheading }}</p>

  {% if section.settings.show_search %}
    <form action="/search" method="get" class="mb-6">
      <input type="search" name="q" placeholder="Search our store" class="border p-2 w-full max-w-md mx-auto">
    </form>
  {% endif %}

  {% if section.settings.show_button %}
    <a href="{{ section.settings.button_link }}" class="inline-block bg-blue-500 text-white py-2 px-4 rounded">
      {{ section.settings.button_text }}
    </a>
  {% endif %}
</div>
